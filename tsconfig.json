{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],      
    "allowJs": true,
    "declaration": false,
    "outDir": "build",                        
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build", "eslint.config.js"]
}